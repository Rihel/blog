extends ../layout
block content
    .container
        .row
            .col-md-6#login
                h2 登录
                .form
                    .form-group
                        label(for="username") 用户名
                        input(type="text" name="username").form-control
                    .form-group
                        label(for="password") 密码
                        input(type="password" name="password").form-control
                    .form-group
                        input(type="button" name="btn" value="登录").btn.btn-success
            .col-md-6#register
                h2 注册
                .form
                    .form-group
                        label(for="username") 用户名
                        input(type="text" name="username").form-control
                    .form-group
                        label(for="password") 密码
                        input(type="password" name="password").form-control
                    .form-group
                        label(for="rppassword") 确认密码
                        input(type="password" name="rppassword").form-control
                    .form-group
                        input(type="button" name="btn" value="登录").btn.btn-success
            
    
        
    
